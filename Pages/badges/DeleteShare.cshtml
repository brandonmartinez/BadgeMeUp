@page
@model BadgeMeUp.Pages.badges.DeleteShareModel

@{
    ViewData["Title"] = "Delete Badge Share";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Badge</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Badge Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.Badge.Name)
        </dd>

        <dt class="col-sm-2">
            From:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.FromUser.PrincipalName)
        </dd>

        <dt class="col-sm-2">
            To:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.User.PrincipalName)
        </dd>

        <dt class="col-sm-2">
            Award Comment:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.AwardComment)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AssignedBadge.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>